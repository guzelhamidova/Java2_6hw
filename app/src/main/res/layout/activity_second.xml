<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <ImageView
        android:id="@+id/rectangles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="The Colosseum"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@id/description"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="One of the most recognizable sites in the world"
        android:textColor="@color/white"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@id/rectangles"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/camera_rect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/camera"
        app:layout_constraintEnd_toStartOf="@id/account_rect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rectangles" />

    <ImageView
        android:id="@+id/account_rect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/camera"
        app:layout_constraintEnd_toStartOf="@id/google_rect"
        app:layout_constraintStart_toEndOf="@id/camera_rect"
        app:layout_constraintTop_toBottomOf="@id/rectangles" />

    <ImageView
        android:id="@+id/google_rect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/account_rect"
        app:layout_constraintTop_toBottomOf="@id/rectangles" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vector"
        app:layout_constraintBottom_toBottomOf="@id/camera_rect"
        app:layout_constraintEnd_toEndOf="@id/camera_rect"
        app:layout_constraintStart_toStartOf="@id/camera_rect"
        app:layout_constraintTop_toTopOf="@id/camera_rect" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/account"
        app:layout_constraintBottom_toBottomOf="@id/account_rect"
        app:layout_constraintEnd_toEndOf="@id/account_rect"
        app:layout_constraintStart_toStartOf="@id/account_rect"
        app:layout_constraintTop_toTopOf="@id/account_rect" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/google"
        app:layout_constraintBottom_toBottomOf="@id/google_rect"
        app:layout_constraintEnd_toEndOf="@id/google_rect"
        app:layout_constraintStart_toStartOf="@id/google_rect"
        app:layout_constraintTop_toTopOf="@id/google_rect" />

    <TextView
        android:id="@+id/nam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="312"
        android:textSize="75dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/account_rect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"/>
    <Button
        android:id="@+id/go_over"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Перейти"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toBottomOf="@id/nam"/>


</androidx.constraintlayout.widget.ConstraintLayout>